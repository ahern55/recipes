<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:recipes.Models"
             xmlns:helpers="clr-namespace:recipes.Helpers"
             x:Class="recipes.Views.RecipeDetailPage"
             Title="{Binding Name}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="icon_edit.png" Command="{Binding EditRecipeCommand}" />
        <ToolbarItem Icon="icon_delete.png"  Command="{Binding DeleteRecipeCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Label Margin ="0" Text="{Binding PrepareTime, StringFormat='Prep Time: {0:0} minutes'}" FontSize="Medium" XAlign="Left" />
            <Label Margin ="0" Text="{Binding CookTime, StringFormat='Cook Time: {0:0} minutes'}" FontSize="Medium" XAlign="Left" />

            <Label Text="Ingredients:" FontSize="Large" FontAttributes="Bold" />
            <StackLayout x:Name="IngredientsListView"
                    BindableLayout.ItemsSource="{Binding Ingredients}">

                <BindableLayout.EmptyView>
                    <StackLayout HorizontalOptions="CenterAndExpand"
                                     VerticalOptions="CenterAndExpand">
                        <Label Text="No Ingredients Added Yet :')"
                                   FontSize="Medium"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center" />
                        <Label Text="Edit the Recipe to Add a Few!"
                                   FontSize="12"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center" />
                    </StackLayout>
                </BindableLayout.EmptyView>

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="0" x:DataType="model:Ingredient">
                            <Label FontSize="Medium">
                                <Label.Text>
                                    <MultiBinding StringFormat="{} • {0} {1} {2}">
                                        <Binding Path="Name" />
                                        <Binding Path="Amount" />
                                        <Binding Path="Unit" />
                                    </MultiBinding>
                                </Label.Text>
                            </Label>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <Label Text="Instructions:" FontSize="Large" FontAttributes="Bold" />
            <StackLayout x:Name="InstructionsListView"
                    BindableLayout.ItemsSource="{Binding Instructions}">

                <BindableLayout.EmptyView>
                    <StackLayout HorizontalOptions="CenterAndExpand"
                                     VerticalOptions="CenterAndExpand">
                        <Label Text="No Instructions Added Yet :o"
                                   FontSize="Medium"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center" />
                        <Label Text="Edit the Recipe to Add a Few!"
                                   FontSize="12"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center" />
                    </StackLayout>
                </BindableLayout.EmptyView>

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="0" x:DataType="model:Instruction">
                            <Label Text="{Binding Contents}" FontSize="Medium" />
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>